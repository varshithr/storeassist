      </thead>

      <tbody>
        {{#each rows}}
          <tr data-messageid="{{message_id}}" data-deliverydate="{{deliver_date}}"
           data-deliverytime="{{deliver_time}}" data-subject="{{subject}}" data-body="{{body}}">
            <td>{{date_sent}}</td>
            <td>{{deliver_date}}</td>
            <td>{{deliver_time}}</td>
            <td>{{message_id}}</td>
