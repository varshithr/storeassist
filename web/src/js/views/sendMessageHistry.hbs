              {{else}}
                <td> No </td>
            {{/equaltoo}}
            <td>{{sent_by}}</td>
            <td>{{time_sent}}</td>
            <td>
              <div class="row">
                <div class="col-sm-3 col-sm-offset-2">
                  <span class="pull-right"><a class="js-sendmsg-edituser edpen" href=""><i class="fa fa-pencil"></i></a></span>
