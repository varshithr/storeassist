<div class="container">
  <div class="row col-sm-6 col-sm-offset-2">
    <div id="js-changeOrders-viewHistory">
      <h4><a class="btn btn-success pull-right"><i class="fa fa-list"></i> View History</a></h4></div>
  </div>
  <div class="row col-sm-6 col-sm-offset-2">
    <form style="background-color: white;text-align: center;padding: 20px;border-radius: 5px;margin-left:-115px">
      <div class="row">
        <div class="col-sm-6">
          <div class="row">
             <div class="col-sm-8">
              <label class="control-label col-xs-3" for="time">Date</label>
            </div>
          </div>
          <div class="row">
            <div class="form-group col-sm-10">
              <input type="text" class="form-control js-createOrderDate" style="padding: 10px;border: none;border-bottom: solid 2px #c9c9c9;transition: border 0.3s;background-color: white;font-size: 18px;" readonly />
            </div>
            <div class="col-sm-2">
              <span class="fa fa-calendar fa-2x"></span>
            </div>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <label class="control-label" for="intials">Employee Initials</label>
            <input type="text" maxlength="3" autocomplete="off" class="form-control style-4 js-empOrderIntial" onkeypress="return onlyAlphabets(event,this);" name="intials" style="padding: 10px;border: none;border-bottom: solid 2px #c9c9c9;transition: border 0.3s;background-color: white;"
              value="{{ordered_by}}" autofocus>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>

<div class="row">
  <div class="col-sm-6 col-sm-offset-2">
    <form style="background-color: white;text-align: center;padding: 20px;border-radius: 5px;padding-bottom:0px;">
      <table class="table" cellspacing="0" width="100%" style="margin-bottom:0px;">
        <thead>
          <tr class="card">
            <th>Type</th>
            <th>$ Amount</th>
            <th></th>
          </tr>
        </thead>
        <tbody id="js-createOrderBody">

          {{#each denominations}}
            <tr class="card">
              <td class="mytable">{{name}}</td>
              <td class="form-group mytable js-orderNumber" style="position:relative;">
                <label for="" style="position: absolute;
      left: -7px;
      top: 16px;
      border-radius: 50px;
      width: 20px;
      height: 20px;
      font-weight: bold;
      padding-left: 5px;">$</label>
                {{#equaltoo checkData 0}}
                  <input type="text" style="text-align: right"  data-currencyId="{{currencyId}}" data-id="{{id}}"
                    data-amount="{{Amount}}" data-step="{{#parseNumber Amount}}{{value}}{{/parseNumber}}" style="border:2px;" class="form-control js-change-entry js-number-type textright border-thick" id="number" value=''/><span></span>
                  {{else}}
                    {{#equaltoo orderdata 0}}
                      <input type="text"style="text-align: right"  data-currencyId="{{currencyId}}" data-id="{{id}}"
                        data-amount="{{Amount}}" data-step="{{#parseNumber Amount}}{{value}}{{/parseNumber}}" style="border:2px;" class="form-control js-change-entry js-number-type textright border-thick" id="number" value="0" /><span></span>
                      {{else}}
                        <input type="text" style="text-align: right" data-currencyId="{{currencyId}}" data-id="{{id}}"
                          data-amount="{{Amount}}" data-step="{{#parseNumber Amount}}{{value}}{{/parseNumber}}" style="border:2px;" class="form-control js-change-entry js-number-type textright border-thick" id="number" value="{{order_amount}}"/><span></span>
                    {{/equaltoo}}
                {{/equaltoo}}
              </td>
              <td class="mytable text-info">$ {{Amount}}/{{bill}}</td>
            </tr>
          {{/each}}
          <tr class="card">
            <td class="mytable">Total</td>
            <td class="form-group mytable" style="position:relative;">
              <label for="" style="position: absolute;
    left: -7px;
    top: 16px;
    border-radius: 50px;
    width: 20px;
    height: 20px;
    font-weight: bold;
    padding-left: 5px;">$</label>
              <input type="number" tabindex="-1" min="0" style="text-align: right" onkeypress='return event.charCode >= 45 && event.charCode <= 57' min=0 class="form-control js-ordered-amountTotal" value="{{totalordered}}" readonly>

            </td>
          </tr>
        </tbody>
      </table>
    </form>
  </div>
</div>

<div class="row">
  <div class="col-sm-5 col-sm-offset-5">
    <div class="row">
      <div class="col-sm-4">
        <button class="btn btn--dark btn-block js-order-actions" data-changeOrderId="{{changeOrderId}}" data-accType="Save" data-loading-text="Loading...">Save</button>
      </div>
      <div class="col-sm-4">
        <button class="btn btn--action btn-block js-order-actions" data-changeOrderId="{{changeOrderId}}" data-accType="Complete">Complete</button>
      </div>
    </div>
  </div>
</div>
