<div class="container">
    <div class="row">
        <div class="col-sm-3 pull-right">
            <button class="btn btn-success dropdown-toggle js-validate-check-details" type="button">
                <i class="fa fa-plus"></i> Add New
            </button>
        </div>
    </div>
    <div class="row db-checkReader" style="width: 1020px">
        <table id="checkexample" class="display example_wrapper" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Number</th>
                    <th>Account</th>
                    <th>Amount</th>
                    <th>Authorization#</th>
                </tr>
            </thead>
            <tbody class="js-checkverification">
                {{#each rows}}
                    <tr>
                        <td>
                            <p class="js-check-date" style="margin:0px;">{{Date}}</p>
                        </td>
                        <td>
                            <p class="js-check-number" style="margin:0px;">{{number}}
                            </p>
                        </td>
                        <td>
                            <p class="js-check-account" style="margin:0px;">{{account}}
                            </p>
                        </td>
                        <td>
                            <p class="js-check-amount" style="margin:0px;">{{amount}}
                            </p>
                        </td>
                        <td>
                            <p class="js-check-authcode" style="margin:0px;">{{authcode}}
                            </p>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
